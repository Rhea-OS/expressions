{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "esnext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "build/tmp",
        "emitDeclarationOnly": true,
        "outDir": "build/ts",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "strict": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "#mod/main.wasm": ["./build/mod/expression_js_bg.wasm", "./wasm.d.ts"],
            "#mod/util.js": ["./build/mod/expression_js_bg.js"],
            "#mod/def.d.ts": ["./build/mod/expression_js.d.ts"],
            "expression": ["./build/pkg"]
        }
    },
    "exclude": [
        "build"
    ]
}
